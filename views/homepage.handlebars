<!-- Loop over each blog in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{project.content}}
    </p>
  </div>
</div>
{{/each}}

<!-- Loop over each comment in the projects array -->
{{#each comments as |comment| }}
<div class="row mb-4 comment">
  <div class="col-md-5">
    <h2>
      <a href="/comment/{{comment.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{comment.content}}
    </p>
  </div>
</div>
{{/each}}
